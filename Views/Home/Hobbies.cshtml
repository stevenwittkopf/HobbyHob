@{
    var hobbies = ViewBag.hobbies as List<Hobby>;
}

<div class="col-20">
    <partial name="NavBarPartial"/>
    <div class="text-center">
        <h3>Hobbies</h3>
    </div>
    <div class="d-flex">
        <div class="col-8">
            @if (hobbies.Count > 0)
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Enthusiasts</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var hobby in hobbies)
                        {
                            <tr>
                                <td>
                                    <a asp-action="HobbyInfo" asp-route-hobbyId="@hobby.HobbyId">
                                        @hobby.Name
                                    </a>
                                </td>
                                <td>@hobby.Enthusiasts.Count</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else {
                <div>
                    <p>--No hobbies to display yet!--</p>
                </div>
            }
            <div>
                <a asp-action="HobbyCreation">Create a Hobby!</a>
            </div>
        </div>
        <div>
            <p>Top Hobby(ies) for Novices<p>
            @if (ViewBag.topNoviceHobbies.Count > 0)
            {
                <ul>
                @foreach (var topHobby in ViewBag.topNoviceHobbies)
                {
                    <li>@topHobby</li>
                }
                </ul>
            }
            else {
                <p>--no enthusiasts at this proficiency level yet!--</p>
            }
            <p>Top Hobby(ies) for Intermediates</p>
            @if (ViewBag.topIntermediateHobbies.Count > 0)
            {
                <ul>
                @foreach (var topHobby in ViewBag.topIntermediateHobbies)
                {
                    <li>@topHobby</li>
                }
                </ul>
            }
            else {
                <p>--no enthusiasts at this proficiency level yet!--</p>
            }
            <p>Top Hobby(ies) for Experts</p>
            @if (ViewBag.topExpertHobbies.Count > 0)
            {
                <ul>
                @foreach (var topHobby in ViewBag.topExpertHobbies)
                {
                    <li>@topHobby</li>
                }
                </ul>
            }
            else {
                <p>--no enthusiasts at this proficiency level yet!--</p>
            }
        </div>
    </div>
</div>