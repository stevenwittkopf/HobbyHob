@model Hobby

<div class="col-16">
    <partial name="NavBarPartial"/>
    <div class="text-center">
        <h3>Add a Hobby</h3>
    </div>
    <form method="post" asp-action="CreateHobby">
        <div class="col-8">
            <div class="form-group">
                <label class="d-block" asp-for="Name">Name:</label>
                <input class="d-block" asp-for="Name"/>
                <span class="d-block" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label class="d-block" asp-for="Description">Description:</label>
                <input class="d-block" asp-for="Description"/>
                <span class="d-block" asp-validation-for="Description"></span>
            </div>
        </div>
        <div>
            <button class="float-right float-bottom">Create</button>
        </div>
    </form>
</div>