@model User

<div class="col-8">
    <div class="text-center">
        <h3>Registration</h3>
    </div>
    <form method="post" asp-action="Register">
        <div class="form-group">
            <div class="form-group-row">
                <label class="col-4" asp-for="FirstName">First Name: </label>
                <input class="col-4" asp-for="FirstName"/>
            </div>
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <div class="form-group-row">
                <label class="col-4" asp-for="LastName">Last Name: </label>
                <input class="col-4" asp-for="LastName"/>
            </div>
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <div class="form-group-row">
                <label class="col-4" asp-for="Username">Username: </label>
                <input class="col-4" asp-for="Username"/>
            </div>
            <span asp-validation-for="Username"></span>
        </div>
        <div class="form-group">
            <div class="form-group-row">
                <label class="col-4" asp-for="Password">Password: </label>
                <input class="col-4" asp-for="Password"/>
            </div>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <div class="form-group-row">
                <label class="col-4" asp-for="ConfirmPassword">Confirm PW: </label>
                <input class="col-4" asp-for="ConfirmPassword"/>
            </div>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group d-flex justify-content-center">
            <button>Login</button>
        </div>
    </form>
</div>